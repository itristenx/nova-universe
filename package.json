{
  "name": "nova-universe-root",
  "version": "2.0.0",
  "description": "Enterprise Help Desk Platform with AI, Monitoring, and Alerting",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules node --test test/*.test.js",
    "test:all": "NODE_OPTIONS=--experimental-vm-modules node test/test-runner.js",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules node test/test-runner.js integration",
    "test:performance": "NODE_OPTIONS=--experimental-vm-modules node test/test-runner.js performance",
    "test:security": "NODE_OPTIONS=--experimental-vm-modules node test/test-runner.js security",
    "test:uat": "NODE_OPTIONS=--experimental-vm-modules node test/test-runner.js uat",
    "test:load": "NODE_OPTIONS=--experimental-vm-modules node test/test-runner.js load",
    "test:parallel": "NODE_OPTIONS=--experimental-vm-modules node test/test-runner.js --parallel",
    "test:verbose": "NODE_OPTIONS=--experimental-vm-modules node test/test-runner.js --verbose",
    "test:ci": "TEST_PARALLEL=true CI=true NODE_OPTIONS=--experimental-vm-modules node test/test-runner.js",
    "test:endurance": "RUN_ENDURANCE_TEST=true NODE_OPTIONS=--experimental-vm-modules node test/test-runner.js load",
    "test:quick": "NODE_OPTIONS=--experimental-vm-modules node test/test-runner.js integration performance",
    "test:smoke": "NODE_OPTIONS=--experimental-vm-modules node test/test-runner.js integration",
    "test:help": "NODE_OPTIONS=--experimental-vm-modules node test/test-runner.js --help",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --config ./tools/config/eslint.config.js",
    "prisma:generate:core": "prisma generate --schema prisma/core/schema.prisma",
    "prisma:generate:auth": "prisma generate --schema prisma/auth/schema.prisma",
    "prisma:generate:audit": "prisma generate --schema prisma/audit/schema.prisma",
    "prisma:generate:cmdb": "prisma generate --schema prisma/cmdb/schema.prisma",
    "prisma:generate:notification": "prisma generate --schema prisma/notification/schema.prisma",
    "prisma:generate:user360": "prisma generate --schema prisma/user360/schema.prisma",
    "prisma:generate:integration": "prisma generate --schema prisma/integration/schema.prisma",
    "prisma:generate:all": "npm run prisma:generate:core && npm run prisma:generate:auth && npm run prisma:generate:audit && npm run prisma:generate:cmdb && npm run prisma:generate:notification && npm run prisma:generate:user360 && npm run prisma:generate:integration",
    "setup": "./setup.sh",
    "teardown": "./teardown.sh",
    "teardown:restart": "./teardown.sh --restart",
    "teardown:shutdown": "./teardown.sh --shutdown",
    "deploy": "bash scripts/deploy-production.sh",
    "validate": "./validate-production-readiness.sh",
    "health": "cd apps/api && node cli.js health",
    "start": "cd apps/api && node cli.js start",
    "stop": "cd apps/api && node cli.js stop",
    "status": "cd apps/api && node cli.js status",
    "test:env": "./setup-test-env.sh",
    "test:env:integration": "./setup-test-env.sh integration",
    "test:env:e2e": "./setup-test-env.sh e2e",
    "test:env:list": "./setup-test-env.sh --list",
    "test:env:clean": "./setup-test-env.sh --clean-all"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@elastic/elasticsearch": "^9.0.3",
    "@eslint/js": "^9.32.0",
    "@prisma/client": "^6.12.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "assert": "^2.1.0",
    "axios": "^1.11.0",
    "babel-jest": "^30.0.5",
    "bcryptjs": "^3.0.2",
    "eslint": "^9.32.0",
    "esmock": "^2.7.1",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "mongoose": "^8.16.4",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "prisma": "^6.14.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@as-integrations/express4": "^1.1.2",
    "@heroui/react": "^2.8.1",
    "@jest/globals": "^30.0.5",
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@node-saml/passport-saml": "^5.1.0",
    "@simplewebauthn/server": "^13.1.2",
    "@types/dompurify": "^3.2.0",
    "autoprefixer": "^10.4.21",
    "base64url": "^3.0.1",
    "commander": "^14.0.0",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "graphql": "^16.11.0",
    "ioredis": "^5.4.1",
    "mongodb": "^6.10.0",
    "pg": "^8.14.0",
    "pm2": "^6.0.8",
    "postcss": "^8.5.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tailwindcss": "^4.1.11",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "overrides": {
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "@mui/material": {
      "react": "19.1.1",
      "react-dom": "19.1.1"
    }
  }
}
