# Logging & SIEM
LOG_LEVEL=debug
LOG_PRETTY=true

# File logging
LOG_FILE_ENABLED=false
LOG_DIR=./logs
LOG_FILE_NAME=nova-api.log
LOG_FILE_ROTATE_SIZE=10M
LOG_FILE_INTERVAL=1d
LOG_FILE_MAX=7
LOG_FILE_COMPRESS=false

# Syslog (RFC5424)
LOG_SYSLOG_ENABLED=false
LOG_SYSLOG_HOST=127.0.0.1
LOG_SYSLOG_PORT=514
LOG_SYSLOG_PROTOCOL=udp
LOG_SYSLOG_TLS=false
# LOG_SYSLOG_HOSTNAME=local-dev

# Splunk HEC
LOG_SPLUNK_HEC_ENABLED=false
# LOG_SPLUNK_HEC_URL=https://splunk.example.com:8088
# LOG_SPLUNK_HEC_TOKEN=changeme
# LOG_SPLUNK_INDEX=main
# LOG_SPLUNK_SOURCETYPE=json

# Azure Log Analytics (Sentinel)
LOG_AZURE_LA_ENABLED=false
# LOG_AZURE_WORKSPACE_ID=
# LOG_AZURE_SHARED_KEY=
# LOG_AZURE_LOG_TYPE=NovaAppLogs