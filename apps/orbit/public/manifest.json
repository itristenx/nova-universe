  "shortcuts": [
    {
      "name": "Create Ticket",
      "short_name": "New Ticket",
      "description": "Create a new support ticket",
      "url": "/tickets/new-enhanced",
      "icons": [
        {
          "src": "/shortcut-ticket.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Track Tickets",
      "short_name": "My Tickets",
      "description": "View and track your tickets",
      "url": "/tickets/track",
      "icons": [
        {
          "src": "/shortcut-track.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Knowledge Base",
      "short_name": "Knowledge",
      "description": "Search knowledge articles",
      "url": "/knowledge/enhanced",
      "icons": [
        {
          "src": "/shortcut-knowledge.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Cosmo AI",
      "short_name": "AI Assistant",
      "description": "Chat with Cosmo AI Assistant",
      "url": "/cosmo/enhanced",
      "icons": [
        {
          "src": "/shortcut-cosmo.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+nova",
      "url": "/handle/%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"],
        "text/plain": [".txt", ".log"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".txt", ".csv", ".json", ".log"]
        }
      ]
    }
  },
  "capture_links": "existing-client-navigate",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://nova-universe.example.com/manifest.json"
    }
  ],
  "prefer_related_applications": false
}
