# Development Dockerfile for nova-beacon (Node.js)
FROM node:20-alpine

WORKDIR /app

# Install development dependencies
RUN apk add --no-cache git

# Copy package files if present
COPY package*.json ./
RUN if [ -f package.json ]; then npm install --legacy-peer-deps; else echo "No package.json; skipping npm install"; fi

# Copy source code
COPY . .

# Create development user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nextjs -u 1001

# Change ownership
RUN chown -R nextjs:nodejs /app

USER nextjs

EXPOSE 3002

# Default command: run dev if package.json exists; else run a simple server that returns 200
CMD ["sh", "-c", "if [ -f package.json ]; then npm run dev; else node -e 'require("http").createServer((req,res)=>{res.end("Beacon placeholder")}).listen(3002)'; fi" ]
