# Nova Universe API - Production Environment Template
# Copy this file to .env.production and fill in your production values
# NEVER commit the actual .env.production file to version control

# ===========================================
# CRITICAL SECURITY SETTINGS - REQUIRED
# ===========================================

# Authentication Secrets (MUST be 32+ characters and cryptographically secure)
# Generate with: openssl rand -base64 48 | tr -d "=+/" | cut -c1-32
SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET_32_CHARS_MIN
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET_32_CHARS_MIN

# Asset Encryption Key (64 hex characters)
# Generate with: openssl rand -hex 32
ASSET_ENCRYPTION_KEY=REPLACE_WITH_64_HEX_CHAR_ENCRYPTION_KEY

# API Authentication Tokens
# Generate with: openssl rand -base64 32
KIOSK_TOKEN=REPLACE_WITH_SECURE_KIOSK_TOKEN
SCIM_TOKEN=REPLACE_WITH_SECURE_SCIM_TOKEN

# ===========================================
# DATABASE CONFIGURATION - REQUIRED
# ===========================================

# PostgreSQL Production Database
POSTGRES_HOST=your-postgres-host.com
POSTGRES_PORT=5432
POSTGRES_USER=nova_prod_user
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_DB_PASSWORD
POSTGRES_DB=nova_universe_prod
POSTGRES_SSL=true
POSTGRES_SSL_REJECT_UNAUTHORIZED=true

# Alternative: Full connection string
# DATABASE_URL=postgresql://nova_prod_user:SECURE_PASSWORD@your-host:5432/nova_universe_prod?sslmode=require

# MongoDB for Audit Logs (Optional)
MONGO_URL=mongodb://mongo_user:SECURE_MONGO_PASSWORD@your-mongo-host:27017/nova_audit?authSource=admin&ssl=true

# Elasticsearch for Search (Optional)
ELASTIC_URL=https://your-elastic-host:9200
ELASTIC_USERNAME=elastic_user
ELASTIC_PASSWORD=SECURE_ELASTIC_PASSWORD
ELASTIC_SSL_VERIFY=true

# Redis for Caching/Sessions (Optional)
REDIS_URL=redis://redis_user:SECURE_REDIS_PASSWORD@your-redis-host:6379/0
REDIS_TLS=true

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Environment and Server Settings
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Public URLs for the application
PUBLIC_URL=https://helpdesk.yourcompany.com
API_BASE_URL=https://api.helpdesk.yourcompany.com

# CORS Origins (comma-separated)
CORS_ORIGINS=https://helpdesk.yourcompany.com,https://admin.yourcompany.com

# ===========================================
# EMAIL/SMTP CONFIGURATION
# ===========================================

# Production Email Settings
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@yourcompany.com
SMTP_PASS=SECURE_EMAIL_PASSWORD

# Email From Address
EMAIL_FROM=Nova Universe <noreply@yourcompany.com>

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Password Hashing (12+ for production)
BCRYPT_ROUNDS=14

# Rate Limiting (adjust based on your needs)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Session Security
SESSION_SECURE=true
SESSION_SAME_SITE=strict
SESSION_MAX_AGE=86400000

# ===========================================
# SSL/TLS CONFIGURATION
# ===========================================

# SSL Certificate paths (if not using a reverse proxy)
# TLS_CERT_PATH=/path/to/cert.pem
# TLS_KEY_PATH=/path/to/private-key.pem

# ===========================================
# MONITORING & LOGGING
# ===========================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Disable debug flags in production
DEBUG_SQL=false
DEBUG_AUTH=false

# Error Reporting (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# EXTERNAL INTEGRATIONS (Optional)
# ===========================================

# Slack Notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Microsoft Teams Notifications
# TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# AI Services (Optional)
# OPENAI_API_KEY=sk-your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# ===========================================
# PERFORMANCE TUNING
# ===========================================

# Database Connection Pools
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=20
POSTGRES_POOL_IDLE_TIMEOUT=10000

# Memory and Performance
NODE_OPTIONS=--max-old-space-size=2048

# ===========================================
# BACKUP AND MAINTENANCE
# ===========================================

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30