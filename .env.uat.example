# UAT Environment Template
NODE_ENV=uat

# API
API_PORT=4102
CORS_ORIGINS=https://uat.example.com,https://admin-uat.example.com
SESSION_SECRET=replace_with_secure_random
JWT_SECRET=replace_with_secure_random
DEBUG_CORS=false

# Database
DATABASE_URL=postgresql://nova_test:test_password_integration@localhost:4132/nova_test
# Redis
REDIS_URL=redis://localhost:4179

# SMTP (use a test relay)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=uat_user
SMTP_PASS=uat_password
SMTP_SECURE=false
SMTP_FROM=noreply@uat.example.com

# Elasticsearch (if used)
ELASTICSEARCH_URL=http://localhost:9200

# Optional integrations
SAML_ENTRY_POINT=
SAML_ISSUER=
SAML_CALLBACK_URL=
SAML_CERT=

# Admin UI
ADMIN_URL=https://admin-uat.example.com