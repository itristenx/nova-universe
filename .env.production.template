# Nova Universe Production Environment Configuration
# Copy this file to .env.production and fill in actual values

# ===========================================
# CORE APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
API_PORT=3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://nova_admin:CHANGE_ME@postgres:5432/nova_universe?schema=public
POSTGRES_DB=nova_universe
POSTGRES_USER=nova_admin
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_PORT=5432

# MongoDB (Analytics & Logging)
MONGODB_URI=mongodb://nova_admin:CHANGE_ME@mongodb:27017/nova_analytics?authSource=admin
MONGO_ROOT_USER=nova_admin
MONGO_ROOT_PASSWORD=CHANGE_ME
MONGO_DB=nova_analytics

# Redis (Caching & Sessions)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_ME

# Elasticsearch (Search Engine)
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=CHANGE_ME

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Configuration
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_STRING
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_STRING
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Encryption
ENCRYPTION_KEY=CHANGE_ME_TO_32_CHAR_STRING

# ===========================================
# SAML SSO CONFIGURATION
# ===========================================
SAML_ENABLED=true
SAML_ENTRY_POINT=https://your-idp.com/sso/saml
SAML_ISSUER=nova-universe-production
SAML_CALLBACK_URL=https://your-domain.com/auth/saml/callback
SAML_CERT=-----BEGIN CERTIFICATE-----...-----END CERTIFICATE-----
SAML_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----...-----END PRIVATE KEY-----

# ===========================================
# SCIM PROVISIONING
# ===========================================
SCIM_ENABLED=true
SCIM_BEARER_TOKEN=CHANGE_ME_TO_SECURE_TOKEN

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@your-domain.com
SMTP_PASS=CHANGE_ME
SMTP_FROM_NAME=Nova Universe
SMTP_FROM_EMAIL=noreply@your-domain.com

# ===========================================
# EXTERNAL INTEGRATIONS
# ===========================================
# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_CLIENT_ID=your-client-id
SLACK_CLIENT_SECRET=your-client-secret

# HelpScout Integration
HELPSCOUT_API_KEY=your-helpscout-api-key
HELPSCOUT_MAILBOX_ID=your-mailbox-id

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://your-tenant.webhook.office.com/webhookb2/...

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Grafana
GRAFANA_PASSWORD=CHANGE_ME

# ===========================================
# PERFORMANCE & SCALING
# ===========================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# ===========================================
# SSL/TLS CONFIGURATION
# ===========================================
HTTPS_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# ===========================================
# DOMAIN CONFIGURATION
# ===========================================
DOMAIN=your-domain.com
API_URL=https://api.your-domain.com
CORE_URL=https://admin.your-domain.com
ORBIT_URL=https://portal.your-domain.com

# Frontend URLs
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_WS_URL=wss://api.your-domain.com

# ===========================================
# BRANDING & CUSTOMIZATION
# ===========================================
ORGANIZATION_NAME=Your Organization
LOGO_URL=https://your-domain.com/logo.png
FAVICON_URL=https://your-domain.com/favicon.ico
THEME_PRIMARY_COLOR=#2D81FF
THEME_SECONDARY_COLOR=#00C7B1

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_2FA=true
ENABLE_SAML=true
ENABLE_SCIM=true
ENABLE_ANALYTICS=true
ENABLE_GAMIFICATION=true
ENABLE_AI_FEATURES=true
ENABLE_WEBSOCKETS=true

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false

# ===========================================
# DEVELOPMENT OVERRIDES (Remove in production)
# ===========================================
# DEBUG=false
# SKIP_EMAIL_VERIFICATION=false
# USE_MOCK_DATA=false
