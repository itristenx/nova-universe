{
  "name": "@nova-universe/ui",
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap --project tsconfig.json --outDir dist",
    "build:js": "NODE_OPTIONS=--max-old-space-size=4096 tsup src/index.tsx --format esm,cjs --out-dir dist",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "eslint": "^8.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@heroicons/react": "2.2.0",
    "@mui/material": "^7.2.0",
    "@mui/types": "^7.4.4",
    "@nova-universe/theme": "file:../theme",
    "zustand": "^5.0.7"
  }
}
