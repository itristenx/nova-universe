{
  "extends": "../../tools/config/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "types": ["react", "react-dom", "node"],
    "baseUrl": ".",
    "paths": {
      "@nova-universe/ui/*": ["src/*"],
      "@nova-universe/theme": ["../../theme/dist/theme.js"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
