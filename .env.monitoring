# Nova Sentinel Environment Configuration
# Add these variables to your main .env file

# Uptime Kuma Configuration
KUMA_URL=http://nova-sentinel-kuma:3001
KUMA_API_KEY=your-kuma-api-key-here
KUMA_WEBHOOK_SECRET=your-webhook-secret-here

# Redis Configuration for Caching
REDIS_URL=redis://nova-sentinel-redis:6379
REDIS_PASSWORD=novasentinel

# Notification Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Nova Sentinel <notifications@nova.local>

# Grafana Configuration (Optional)
GRAFANA_USER=admin
GRAFANA_PASSWORD=novasentinel

# Nova Sentinel Feature Flags
NOVA_SENTINEL_ENABLED=true
NOVA_SENTINEL_REALTIME_UPDATES=true
NOVA_SENTINEL_AI_ANALYSIS=true
NOVA_SENTINEL_PUBLIC_STATUS=true

# Monitoring Thresholds
MONITOR_DEFAULT_INTERVAL=60
MONITOR_DEFAULT_TIMEOUT=30
UPTIME_ALERT_THRESHOLD=95
RESPONSE_TIME_ALERT_THRESHOLD=5000

# Incident Management
INCIDENT_AUTO_ACKNOWLEDGE=false
INCIDENT_AUTO_RESOLVE_TIMEOUT=3600
INCIDENT_ESCALATION_TIMEOUT=1800

# Status Page Configuration
STATUS_PAGE_CACHE_TTL=30
STATUS_PAGE_MAX_INCIDENTS=20
STATUS_PAGE_UPTIME_DAYS=90
