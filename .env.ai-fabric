# Nova AI Fabric Environment Configuration
# Copy this to .env and configure with your actual values

# ========================================
# CORE AI FABRIC SETTINGS
# ========================================
NOVA_AI_FABRIC_ENABLED=true
NOVA_AI_FABRIC_PORT=3000
NOVA_AI_FABRIC_HOST=localhost
NOVA_AI_FABRIC_ENV=development

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=postgresql://nova_user:nova_password@localhost:5432/nova_ai_fabric
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://localhost:27017/nova_ai_fabric

# AI Fabric specific database
AI_FABRIC_DB_HOST=localhost
AI_FABRIC_DB_PORT=5432
AI_FABRIC_DB_NAME=nova_ai_fabric
AI_FABRIC_DB_USER=nova_ai_user
AI_FABRIC_DB_PASSWORD=secure_password_here

# ========================================
# AI PROVIDERS CONFIGURATION
# ========================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-organization-id
OPENAI_PROJECT_ID=proj_your-project-id
OPENAI_MODEL_DEFAULT=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# OpenAI Harmony Configuration
OPENAI_HARMONY_ENDPOINT=https://api.openai.com/v1/harmony
OPENAI_HARMONY_API_KEY=sk-your-harmony-api-key-here
HARMONY_DATA_PATH=/workspace/data/harmony
HARMONY_COMPLIANCE_LEVEL=enhanced
HARMONY_DATA_RETENTION_DAYS=90

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL_DEFAULT=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4096

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Google AI Configuration
GOOGLE_AI_API_KEY=your-google-ai-key-here
GOOGLE_AI_PROJECT_ID=your-google-project-id

# HuggingFace Configuration
HUGGINGFACE_API_KEY=hf_your-huggingface-token-here
HUGGINGFACE_MODEL_DEFAULT=microsoft/DialoGPT-large

# ========================================
# GPT-OSS-20B SECURE INTEGRATION
# ========================================
GPT_OSS_MODEL_PATH=/workspace/models/gpt-oss-20b
GPT_OSS_SECURITY_LEVEL=high
GPT_OSS_ISOLATION_MODE=container
GPT_OSS_ENCRYPTION_ENABLED=true
GPT_OSS_MAX_CONCURRENT_REQUESTS=5
GPT_OSS_MEMORY_LIMIT=8GB
GPT_OSS_TIMEOUT_MS=30000

# ========================================
# MCP SERVER CONFIGURATION
# ========================================
MCP_SERVER_PORT=3001
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_API_KEY=mcp-nova-secure-key-123456
MCP_SERVER_CORS_ORIGINS=https://chat.openai.com,https://chatgpt.com
MCP_SERVER_RATE_LIMIT_WINDOW=900000
MCP_SERVER_RATE_LIMIT_MAX=100
MCP_SERVER_SESSION_SECRET=mcp-session-secret-key-change-this
MCP_SERVER_WEBHOOK_SECRET=mcp-webhook-secret-change-this

# ========================================
# RAG ENGINE CONFIGURATION
# ========================================
RAG_ENABLED=true
RAG_EMBEDDING_MODEL=text-embedding-ada-002
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_CONTEXT_LENGTH=4000

# Vector Store Configuration
VECTOR_STORE_TYPE=chromadb
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION_NAME=nova_knowledge

# Alternative Vector Stores (choose one)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-env
PINECONE_INDEX_NAME=nova-knowledge

QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=nova_knowledge

WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key

# ========================================
# NOVA LOCAL AI/ML CONFIGURATION
# ========================================
NOVA_AI_MODELS_PATH=/workspace/data/ai-models
NOVA_CUSTOM_MODELS_PATH=/workspace/data/nova-models
TENSORFLOW_BACKEND=cpu
TENSORFLOW_MEMORY_LIMIT=4096
NOVA_ML_RETRAINING_THRESHOLD=100
NOVA_ML_HEALTH_CHECK_INTERVAL=3600000

# Model Training Configuration
NOVA_TRAINING_BATCH_SIZE=32
NOVA_TRAINING_EPOCHS=15
NOVA_TRAINING_LEARNING_RATE=0.0001
NOVA_TRAINING_VALIDATION_SPLIT=0.2

# ========================================
# AI MONITORING & COMPLIANCE
# ========================================
AI_MONITORING_ENABLED=true
AI_AUDIT_LEVEL=full
AI_BIAS_DETECTION_ENABLED=true
AI_DRIFT_DETECTION_ENABLED=true
AI_EXPLAINABILITY_ENABLED=true

# Compliance Configuration
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
HIPAA_COMPLIANCE=false
SOX_COMPLIANCE=true
AI_ACT_COMPLIANCE=true

# Monitoring Thresholds
AI_ACCURACY_THRESHOLD=0.85
AI_LATENCY_THRESHOLD_MS=1000
AI_ERROR_RATE_THRESHOLD=0.05
AI_BIAS_THRESHOLD=0.15

# ========================================
# SECURITY CONFIGURATION
# ========================================
AI_FABRIC_JWT_SECRET=your-super-secure-jwt-secret-here
AI_FABRIC_ENCRYPTION_KEY=your-256-bit-encryption-key-here
AI_FABRIC_SESSION_SECRET=your-session-secret-here

# Rate Limiting
AI_FABRIC_RATE_LIMIT_WINDOW=900000
AI_FABRIC_RATE_LIMIT_MAX=100
AI_FABRIC_RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# Security Headers
AI_FABRIC_SECURITY_HEADERS=true
AI_FABRIC_CORS_ENABLED=true
AI_FABRIC_CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ========================================
# LOGGING & OBSERVABILITY
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/workspace/logs/ai-fabric.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Metrics and Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# Distributed Tracing
JAEGER_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ========================================
# CLOUD PROVIDER CONFIGURATION
# ========================================

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=nova-ai-fabric-models
AWS_BEDROCK_REGION=us-east-1

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=nova-ai-fabric-rg
AZURE_REGION=eastus

# ========================================
# STORAGE CONFIGURATION
# ========================================
AI_FABRIC_STORAGE_TYPE=local
AI_FABRIC_STORAGE_PATH=/workspace/data/ai-fabric

# S3 Storage (if using cloud storage)
AI_FABRIC_S3_BUCKET=nova-ai-fabric-storage
AI_FABRIC_S3_REGION=us-east-1
AI_FABRIC_S3_ACCESS_KEY=your-s3-access-key
AI_FABRIC_S3_SECRET_KEY=your-s3-secret-key

# ========================================
# PERFORMANCE TUNING
# ========================================
AI_FABRIC_WORKER_PROCESSES=4
AI_FABRIC_MAX_CONNECTIONS=1000
AI_FABRIC_KEEP_ALIVE_TIMEOUT=5000
AI_FABRIC_BODY_LIMIT=10MB

# Memory Management
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=16

# ========================================
# FEATURE FLAGS
# ========================================
FEATURE_REAL_TIME_LEARNING=true
FEATURE_AUTO_SCALING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_CUSTOM_MODELS=true
FEATURE_FEDERATED_LEARNING=false
FEATURE_QUANTUM_READY=false

# ========================================
# ITSM INTEGRATION CONFIGURATION
# ========================================

# ServiceNow Integration
SERVICENOW_INSTANCE_URL=https://your-instance.service-now.com
SERVICENOW_USERNAME=nova_integration_user
SERVICENOW_PASSWORD=servicenow_password
SERVICENOW_CLIENT_ID=your-servicenow-client-id
SERVICENOW_CLIENT_SECRET=your-servicenow-client-secret

# Jira Integration
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=NOVA

# Zendesk Integration
ZENDESK_SUBDOMAIN=your-subdomain
ZENDESK_EMAIL=your-zendesk-email
ZENDESK_API_TOKEN=your-zendesk-token

# Freshservice Integration
FRESHSERVICE_DOMAIN=your-domain.freshservice.com
FRESHSERVICE_API_KEY=your-freshservice-api-key

# ========================================
# NOTIFICATION CONFIGURATION
# ========================================

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@company.com
SMTP_PASS=your-email-password

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_CHANNEL_ALERTS=#ai-fabric-alerts
SLACK_CHANNEL_NOTIFICATIONS=#ai-fabric-notifications

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=https://your-tenant.webhook.office.com/webhookb2/...

# ========================================
# BACKUP & DISASTER RECOVERY
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_TYPE=s3
BACKUP_S3_BUCKET=nova-ai-fabric-backups

# ========================================
# DEVELOPMENT & TESTING
# ========================================
NODE_ENV=development
DEBUG=nova:ai-fabric:*
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/nova_ai_fabric_test

# Testing Configuration
TEST_TIMEOUT=30000
TEST_COVERAGE_THRESHOLD=80
JEST_WORKERS=4

# ========================================
# PRODUCTION OVERRIDES
# ========================================
# Uncomment and modify for production deployment

# NOVA_AI_FABRIC_ENV=production
# NODE_ENV=production
# LOG_LEVEL=warn
# AI_FABRIC_WORKER_PROCESSES=8
# AI_FABRIC_MAX_CONNECTIONS=5000
# BACKUP_ENABLED=true
# PROMETHEUS_ENABLED=true
# JAEGER_ENABLED=true

# ========================================
# KUBERNETES CONFIGURATION
# ========================================
# (Used when deploying to Kubernetes)

K8S_NAMESPACE=nova-ai-fabric
K8S_SERVICE_ACCOUNT=nova-ai-fabric-sa
K8S_CONFIG_MAP=nova-ai-fabric-config
K8S_SECRET=nova-ai-fabric-secrets

# Scaling Configuration
K8S_MIN_REPLICAS=2
K8S_MAX_REPLICAS=10
K8S_TARGET_CPU_UTILIZATION=70
K8S_TARGET_MEMORY_UTILIZATION=80

# ========================================
# CUSTOM NOVA CONFIGURATION
# ========================================
NOVA_COMPANY_NAME=Your Company Name
NOVA_SUPPORT_EMAIL=support@yourcompany.com
NOVA_ADMIN_EMAIL=admin@yourcompany.com
NOVA_BRAND_COLOR=#007bff
NOVA_TIMEZONE=America/New_York
NOVA_LANGUAGE_DEFAULT=en

# Business Logic Configuration
NOVA_SLA_DEFAULT_RESPONSE_TIME=4
NOVA_SLA_DEFAULT_RESOLUTION_TIME=24
NOVA_PRIORITY_ESCALATION_THRESHOLD=0.8
NOVA_AUTO_RESOLVE_CONFIDENCE_THRESHOLD=0.9

# ========================================
# ADVANCED AI FEATURES
# ========================================

# Federated Learning
FEDERATED_LEARNING_ENABLED=false
FEDERATED_LEARNING_COORDINATOR_URL=https://federated.nova-ai.com
FEDERATED_LEARNING_NODE_ID=nova-node-001

# A/B Testing for AI Models
AB_TESTING_ENABLED=true
AB_TESTING_TRAFFIC_SPLIT=0.1
AB_TESTING_EXPERIMENT_DURATION=7

# Multi-Modal AI
MULTIMODAL_AI_ENABLED=true
VISION_API_ENABLED=true
SPEECH_TO_TEXT_ENABLED=true
TEXT_TO_SPEECH_ENABLED=true

# ========================================
# COMPLIANCE & REGULATORY
# ========================================

# Data Residency
DATA_RESIDENCY_REGION=US
DATA_RESIDENCY_STRICT=false

# Audit Configuration
AUDIT_LOG_RETENTION_YEARS=7
AUDIT_LOG_ENCRYPTION=true
AUDIT_LOG_IMMUTABLE=true

# Privacy Configuration
PII_DETECTION_ENABLED=true
PII_ANONYMIZATION_ENABLED=true
DATA_MINIMIZATION_ENABLED=true
CONSENT_MANAGEMENT_ENABLED=true

# ========================================
# END OF CONFIGURATION
# ========================================

# Note: Remember to:
# 1. Change all default passwords and secrets
# 2. Use strong encryption keys (256-bit recommended)
# 3. Enable HTTPS in production
# 4. Configure proper firewall rules
# 5. Set up monitoring and alerting
# 6. Regular security audits and penetration testing
# 7. Keep all dependencies up to date
# 8. Implement proper backup and disaster recovery procedures