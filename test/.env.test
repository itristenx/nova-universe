# Nova Universe Testing Configuration

# API Configuration
TEST_API_URL=http://localhost:3000
TEST_FRONTEND_URL=http://localhost:3001
TEST_TIMEOUT=300000

# Database Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/nova_test

# Test Execution Configuration
TEST_PARALLEL=false
TEST_VERBOSE=false
RUN_ENDURANCE_TEST=false

# Performance Test Thresholds
PERF_AVG_RESPONSE_TIME=2000
PERF_P95_RESPONSE_TIME=5000
PERF_P99_RESPONSE_TIME=10000
PERF_ERROR_RATE=0.05
PERF_MIN_THROUGHPUT=50

# Load Test Configuration
LOAD_MAX_USERS=1000
LOAD_TEST_DURATION=300000
LOAD_RAMP_UP_TIME=30000

# Security Test Configuration
SECURITY_MAX_ATTEMPTS=100
SECURITY_RATE_LIMIT_TEST=true

# CI/CD Configuration
CI=false
FULL_LOAD_TEST=false

# Reporting Configuration
GENERATE_HTML_REPORT=true
REPORT_DIRECTORY=./test-reports
SAVE_SCREENSHOTS=false

# Environment-specific overrides
# Development
DEV_API_URL=http://localhost:3000
DEV_SKIP_SECURITY_TESTS=false

# Staging
STAGING_API_URL=https://staging.nova-universe.com
STAGING_RUN_ENDURANCE_TEST=true
STAGING_PARALLEL_TESTS=true

# Production (Read-only tests only)
PROD_API_URL=https://nova-universe.com
PROD_READ_ONLY=true
PROD_SKIP_LOAD_TESTS=true
